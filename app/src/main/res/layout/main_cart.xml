<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingBottom="46sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#ff4200"
        android:layout_width="match_parent"
        android:layout_height="40sp">
        <TextView
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="购物车"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:paddingBottom="50sp"
            android:id="@+id/lv_cart_goods_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>


        <LinearLayout
            android:background="#84efefef"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/cb_main_cart_select_all"
                    style="@style/CustomCheckboxTheme"
                    android:layout_marginLeft="5sp"
                    android:background="#84efefef"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                    <TextView

                        android:layout_marginLeft="10sp"
                        android:text="全选"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
        </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_cart_item_refresh"
                    android:layout_marginLeft="20sp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:background="@drawable/refresh2"
                        android:layout_width="25sp"
                        android:layout_height="25sp" />
                    <TextView
                        android:textColor="#a7a4a4"
                        android:textSize="14sp"
                        android:layout_marginLeft="10sp"
                        android:text="刷新"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="合计："
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
               <TextView
                   android:id="@+id/tv_main_cart_sumprice"
                   android:layout_marginRight="10sp"
                   android:text="¥158"
                   android:textSize="18sp"
                   android:textColor="#ff4200"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
        <Button
            android:textColor="#ffffff"
            android:background="@drawable/cart_jiesuan_button"
            android:text="结算"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
    </RelativeLayout>




</LinearLayout>