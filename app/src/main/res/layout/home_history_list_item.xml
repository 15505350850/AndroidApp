<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:paddingBottom="10sp"
        android:layout_margin="10sp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_history_item_sales"
                android:text="包邮"
                android:textSize="8sp"
                android:paddingBottom="2sp"
                android:paddingTop="2sp"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:textColor="#ffffff"
                android:background="@drawable/my_login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_history_item_name"
                android:textColor="#3e3e3e"
                android:layout_marginLeft="10sp"
                android:text="阿迪达斯男子新款羽绒服阿迪达斯男子新款羽绒服阿迪达斯男子新款羽绒服"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_history_item_time"
                android:text="2016-04-05 21:23"
                android:textSize="10sp"
                android:padding="3sp"
                android:background="@drawable/my_login_border"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_history_item_price"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="#ff40"
                android:textSize="18sp"
                android:text="111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:background="@drawable/close2"
                android:id="@+id/tv_history_item_delete"
                android:layout_alignParentRight="true"
                android:layout_width="25sp"
                android:layout_height="25sp" />

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>