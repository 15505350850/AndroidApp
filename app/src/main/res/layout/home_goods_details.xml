<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#f7633a"
        android:layout_width="match_parent"
        android:layout_height="40sp">
        <Button
            android:id="@+id/bt_home_goods_details_back"
            android:layout_marginLeft="10sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back"
            android:layout_width="30sp"
            android:layout_height="30sp" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="商品详情"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#ffffff"
            />
    </RelativeLayout>


    <ScrollView
        android:layout_marginTop="40sp"
        android:layout_marginBottom="100sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginBottom="100sp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_vertical"
                android:background="@drawable/appreciate"
                android:layout_width="20sp"
                android:layout_height="20sp" />
            <TextView
                android:id="@+id/tv_goods_details_name"
                android:layout_marginLeft="5sp"
                android:text="商品标题  阿迪达斯秋冬新款男子卫裤  专柜正品  特价销售  专柜正品  特价销  专柜正品  特价销"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="40sp"
            android:textColor="#ff4400"
            android:textSize="22sp"
            android:text="¥ "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_goods_details_price"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="10sp"
                android:textColor="#ff4400"
                android:textSize="22sp"
                android:text="599"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_goods_details_sales"
                android:layout_marginLeft="10sp"
                android:text="包邮"
                android:textSize="8sp"
                android:paddingBottom="2sp"
                android:paddingTop="2sp"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:textColor="#ffffff"
                android:background="@drawable/my_login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12sp"
                android:layout_marginLeft="10sp"
                android:layout_marginBottom="5sp"
                android:layout_gravity="bottom"
                android:text="价格 ¥ 399"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </LinearLayout>

        <TextView
            android:id="@+id/tv_goods_details_simple"
            android:gravity="center"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:textColor="#f72b2b"
            android:text="商品简介"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:background="#e9e8e8"
            android:padding="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/round_check_o"
                    android:layout_width="16sp"
                    android:layout_height="16sp" />
                <TextView
                    android:layout_marginLeft="5sp"
                    android:textSize="13sp"
                    android:text="正品保障"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/round_check_o"
                    android:layout_width="16sp"
                    android:layout_height="16sp" />
                <TextView
                    android:layout_marginLeft="5sp"
                    android:textSize="13sp"
                    android:text="消费者保障"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/round_check_o"
                    android:layout_width="16sp"
                    android:layout_height="16sp" />
                <TextView
                    android:layout_marginLeft="5sp"
                    android:textSize="13sp"
                    android:text="七天退换"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:gravity="right"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_goods_details_time"
                android:layout_marginRight="50sp"
                android:text="上市时间：2016-08-09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_goods_details_type"
                android:layout_marginRight="20sp"
                android:text="女装-毛呢大衣"
                android:textSize="15sp"
                android:padding="5sp"
                android:background="@drawable/my_login_border"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:background="#e9e8e8"
            android:padding="10sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:text="购买数量"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="wrap_content">
            <TextView
                android:text="库存："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_goods_details_num"
                android:text="12"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:paddingBottom="10sp"
            android:background="#e9e8e8"
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <TextView
               android:id="@+id/tv_goods_details_move"
               android:layout_marginRight="10sp"
               android:background="@drawable/move"
               android:layout_width="30sp"
               android:layout_height="30sp" />
            <TextView
                android:id="@+id/tv_goods_details_currentnum"
                android:gravity="center_horizontal|center_vertical"
                android:text="1"
                android:textSize="20sp"
                android:textColor="#000000"
                android:background="#ffffff"
                android:layout_width="60sp"
                android:layout_height="30sp" />
            <TextView
                android:id="@+id/tv_goods_details_add"
                android:layout_marginLeft="10sp"
                android:background="@drawable/add"
                android:layout_width="30sp"
                android:layout_height="30sp" />
            <TextView
                android:layout_marginLeft="20sp"
                android:text="总价：¥"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_goods_details_sumprice"
                android:layout_marginLeft="5sp"
                android:textColor="#ff40"
                android:textSize="18sp"
                android:text="320"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:text="商品详情"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_goods_details_goodstext"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="100sp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="100sp">
        <LinearLayout
            android:paddingTop="5sp"
            android:background="#c8eaeaea"
            android:layout_width="match_parent"
            android:layout_height="50sp">
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/service"
                    android:layout_width="30sp"
                    android:layout_height="30sp" />
                <TextView
                    android:textSize="10sp"
                    android:textColor="#605f5f"
                    android:text="联系客服"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/clothes"
                    android:layout_width="30sp"
                    android:layout_height="30sp" />
                <TextView
                    android:textSize="10sp"
                    android:textColor="#605f5f"
                    android:text="查找同款"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/shoucang"
                    android:layout_width="30sp"
                    android:layout_height="30sp" />
                <TextView
                    android:textSize="10sp"
                    android:textColor="#605f5f"
                    android:text="收藏"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50sp">
            <TextView
                android:id="@+id/tv_goods_details_buy"
                android:textColor="#ffffff"
                android:gravity="center_vertical|center_horizontal"
                android:background="#f43434"
                android:text="立即购买"
                android:layout_width="0sp"
                android:layout_height="50sp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_goods_details_addcart"
                android:textColor="#ffffff"
                android:gravity="center_vertical|center_horizontal"
                android:background="#f45134"
                android:text="添加到购物车"
                android:layout_width="0sp"
                android:layout_height="50sp"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>
</RelativeLayout>