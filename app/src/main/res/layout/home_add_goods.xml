<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#f7633a"
        android:layout_width="match_parent"
        android:layout_height="40sp">
        <Button
            android:id="@+id/bt_home_admin_addgoods_back"
            android:layout_marginLeft="10sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back"
            android:layout_width="30sp"
            android:layout_height="30sp" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="添加商品"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#ffffff"
            />
    </RelativeLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



    <LinearLayout
        android:layout_margin="10sp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30sp">
        <TextView
            android:text="商品名："
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_add_goods_name"
            android:background="@drawable/repair_kuaidi_input"
            android:layout_width="match_parent"
            android:layout_height="30sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10sp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30sp">
        <TextView
            android:text="商品简介："
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_add_goods_simple"
            android:background="@drawable/repair_kuaidi_input"
            android:layout_width="match_parent"
            android:layout_height="30sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10sp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30sp">
        <TextView
            android:text="商品价格："
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_add_goods_price"
            android:background="@drawable/repair_kuaidi_input"
            android:layout_width="100sp"
            android:layout_height="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10sp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="商品类别："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <Spinner
        android:layout_margin="10sp"
            android:background="@drawable/my_login_border"
            android:layout_width="80sp"
            android:layout_height="35sp"
            android:id="@+id/province"
       >
    </Spinner>
        <Spinner
            android:layout_margin="10sp"
            android:id="@+id/city"
            android:background="@drawable/my_login_border"
            android:layout_width="150sp"
            android:layout_height="35sp"
            android:layout_below="@id/province">

    </Spinner>
    </LinearLayout>
            <LinearLayout
                android:layout_margin="10sp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="促销类别："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:layout_margin="10sp"
                    android:entries="@array/cuxiao"
                    android:background="@drawable/my_login_border"
                    android:layout_width="120sp"
                    android:layout_height="35sp"
                    android:id="@+id/sp_sales"
                    >
                </Spinner>
            </LinearLayout>
    <LinearLayout
        android:layout_margin="10sp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30sp">
        <TextView
            android:text="库存："
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_add_goods_num"
            android:background="@drawable/repair_kuaidi_input"
            android:layout_width="match_parent"
            android:layout_height="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10sp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30sp">
        <TextView
            android:text="上市时间："
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_add_goods_time"
            android:paddingLeft="10sp"
            android:background="@drawable/repair_kuaidi_input"
            android:layout_width="120sp"
            android:layout_height="30sp" />
        <Button
            android:id="@+id/bt_add_gettime"
            android:textColor="#ffffff"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:text="获取当前时间"
            android:background="@drawable/my_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10sp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="商品详情："
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_add_goods_text"
            android:paddingLeft="5sp"
            android:gravity="top"
            android:background="@drawable/my_login_border"
            android:layout_width="match_parent"
            android:minHeight="120sp"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <Button
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="20sp"
        android:id="@+id/bt_add_goods_add"
        android:textColor="#ffffff"
        android:text="确认添加"
        android:textSize="18sp"
        android:background="#ff40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>