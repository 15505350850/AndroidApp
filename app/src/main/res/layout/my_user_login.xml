<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<RelativeLayout
    android:background="#f7633a"
    android:layout_width="match_parent"
    android:layout_height="40sp">
    <Button
        android:layout_marginLeft="10sp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/back"
        android:layout_width="30sp"
        android:layout_height="30sp" />
    <TextView
        android:id="@+id/tv_my_user_login_back"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="用户登录"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#ffffff"
        />

</RelativeLayout>
    <EditText
        android:id="@+id/et_my_user_login_username"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="用户名/邮箱/手机号"
        android:textSize="18dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/my_login_border"
        />
    <EditText
        android:id="@+id/et_my_user_login_psw"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="50dp"
        android:hint="密码"
        android:background="@drawable/my_login_border"
        android:password="true"
        />
    <Button
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="登     录"
        android:textSize="20sp"
        android:id="@+id/bt_my_user_login_gologin"
        android:background="@drawable/my_login_button"
        android:textColor="#fff"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="没有账号？立即注册！"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:textColor="#ff4200"
        android:id="@+id/tv_my_user_go_register"
        />



</LinearLayout>
