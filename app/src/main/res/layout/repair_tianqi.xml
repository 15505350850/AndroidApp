<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/tianqi_bg"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40sp">
        <TextView
            android:id="@+id/tv_repair_tianqi_back"
            android:layout_marginLeft="10sp"
            android:background="@drawable/back"
            android:layout_width="40sp"
            android:layout_height="30sp" />

    </LinearLayout>
    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/rl_repair_tianqi1"
        android:layout_margin="10dp"
        android:background="@drawable/tianqi"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:text="17℃"
            android:textSize="80dp"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:id="@+id/tv_repair_tianqi_temperature"
            android:textColor="#000000"
            />
        <TextView
            android:gravity="center"
            android:text="济南"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textSize="50dp"
            android:layout_marginRight="40dp"
            android:id="@+id/tv_repair_tianqi_name"
            />
        <TextView
            android:gravity="center"
            android:text="济南,济南,山东,中国"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="20dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="40dp"
            android:id="@+id/tv_repair_tianqi_path"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_repair_tianqi2"
        android:background="@drawable/tianqi"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:text="天气情况：多云"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:id="@+id/tv_repair_tianqi_text"
            />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/x99"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:id="@+id/iv_repair_tianqi_code"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更新时间：2016-26-26"
        android:layout_marginLeft="20dp"
        android:textSize="14dp"
        android:id="@+id/tv_repair_tianqi_last_update"
        />

</LinearLayout>