<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="请选择快递公司"
            android:background="@drawable/repair_kuaidi_input"
            android:gravity="center"
            android:textSize="17dp"
            android:id="@+id/select_express_type"
            />
        <TextView
            android:layout_marginRight="20sp"
            android:layout_marginTop="8dp"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:textSize="30dp"
            android:background="@drawable/right"
            />

        <TextView
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <EditText
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="请输入快递单号"
            android:id="@+id/postid"
            android:background="@drawable/repair_kuaidi_input"
            android:inputType="number"
            />
        <TextView
            android:id="@+id/delete_postid"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/close"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查    询"
        android:textSize="21dp"
        android:background="@drawable/my_login_button"
        android:layout_margin="10dp"
        android:textColor="#ffffff"
        android:id="@+id/query_express"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/lsjl"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kuaidigongsi"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textSize="13dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/companytype"
            android:text=""
            android:layout_marginRight="10dp"
            android:textSize="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nu"
            android:text=""
            android:textSize="13dp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dangqianzhuangtai"
            android:layout_marginLeft="10dp"
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:text=""
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/updatetime"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textColor="#1b8345"
            android:text=""
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/list_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>


