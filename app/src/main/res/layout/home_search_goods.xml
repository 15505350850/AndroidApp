<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#ff4400"
        android:layout_width="match_parent"
        android:layout_height="40sp">
        <TextView
            android:layout_marginLeft="10sp"
            android:layout_centerVertical="true"
            android:id="@+id/goods_list_back"
            android:background="@drawable/back"
            android:layout_width="30sp"
            android:layout_height="30sp" />

        <TextView
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="搜索商品"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:background="#ececec"
        android:layout_width="match_parent"
        android:layout_height="50sp">
        <TextView
            android:layout_marginLeft="10sp"
            android:layout_centerVertical="true"
            android:background="@drawable/search_2"
            android:layout_width="25sp"
            android:layout_height="25sp" />
        <EditText
            android:id="@+id/et_search_text"
            android:paddingLeft="10sp"
            android:layout_centerVertical="true"
            android:background="@drawable/home_search_bottm"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="80sp"
            android:layout_width="match_parent"
            android:layout_height="40sp" />
        <Button
            android:id="@+id/bt_search_gosearch"
            android:text="搜索"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_marginRight="10sp"
            android:background="@drawable/my_login_button"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="60sp"
            android:layout_height="30sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20sp"
        android:background="#abf2f2f2"
        android:layout_width="match_parent"
        android:layout_height="40sp">
        <TextView
            android:textColor="#646464"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="分   类"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
        android:padding="10sp"
        android:background="#abf2f2f2"
        android:layout_margin="10sp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="男装"
            android:textColor="#646464"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:background="#c1c1c1"
            android:layout_width="match_parent"
            android:layout_height="1sp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_search_nan_changku"
            android:gravity="center_vertical"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="80sp">
            <TextView
                android:layout_centerHorizontal="true"
                android:background="@drawable/nan_changku"
                android:layout_width="50sp"
                android:layout_height="50sp" />
            <TextView
                android:text="长裤"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_search_nan_txu"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="80sp">
            <TextView
                android:layout_centerHorizontal="true"
                android:background="@drawable/nan_txu"
                android:layout_width="50sp"
                android:layout_height="50sp" />
            <TextView
                android:text="T恤"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_search_nan_yurongfu"
                android:gravity="center_vertical"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="80sp">
                <TextView
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/nan_yurongfu"
                    android:layout_width="45sp"
                    android:layout_height="45sp" />
                <TextView
                    android:text="羽绒服"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_search_nan_chenyi"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="80sp">
                <TextView
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/nan_chenyi"
                    android:layout_width="50sp"
                    android:layout_height="50sp" />
                <TextView
                    android:text="衬衣"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:padding="10sp"
        android:background="#abf2f2f2"
        android:layout_margin="10sp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="女装"
            android:textColor="#646464"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:background="#c1c1c1"
            android:layout_width="match_parent"
            android:layout_height="1sp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_search_nv_dayi"
                android:gravity="center_vertical"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="80sp">
                <TextView
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/nv_dayi"
                    android:layout_width="50sp"
                    android:layout_height="50sp" />
                <TextView
                    android:text="毛呢大衣"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_search_nv_yurongfu"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="80sp">
                <TextView
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/nv_yurongfu"
                    android:layout_width="50sp"
                    android:layout_height="50sp" />
                <TextView
                    android:text="羽绒服"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_search_nv_yangmaoshan"
                android:gravity="center_vertical"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="80sp">
                <TextView
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/nv_yangmaoshan"
                    android:layout_width="45sp"
                    android:layout_height="45sp" />
                <TextView
                    android:text="羊毛衫"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_search_nv_niuzaiku"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="80sp">
                <TextView
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/nv_changku"
                    android:layout_width="50sp"
                    android:layout_height="50sp" />
                <TextView
                    android:text="牛仔裤"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>